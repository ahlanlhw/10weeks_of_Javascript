<!doctype html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Minimalist UI for Small projects</title>
        <link rel = "stylesheet" href="css/styles.css">
    </head>
    <body>
        <div class="sideNav">
            <div class="logoPlaceHolder">
                LOGO HERE
            </div>
            <div class="navBarContents">
                <div class="navBarItems">
                    <ul>
                        <li>
                            test1
                        </li>
                        <li>
                            test2
                        </li>
                        <li>
                            test3
                        </li>
                        <li>
                            test4
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class = "contentBlob">
            <div class="projBanner">
                <h3>proj title</h3>
                <p>This project lorem</p>
            </div>
            <div class="row">
                <div class="rowBlocks">
                    <div class="rowHeader">
                        Scoping
                    </div>
                    <form class ='' action="/" method="post">
                        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                        <button type="submit" name="button">+</button>
                    </form>
                    <div class="list" id = 'scoping'>
                        <% listItem.forEach(function(item){ %>
                            <form action = '/delete' method = 'post'>
                                <div class="item" draggable="true">
                                    <p> <%=item.task%></p>
                                    <p> <%=item.taskDateCreated%></p>
                                    <p hidden=true> <%=item._id%></p>
                                    <input type="checkbox" name="taskToDelete" value="<%= item._id %>" onChange="this.form.submit()">
                                </div>
                            </form>
                        <% }) %>
                    </div>
                </div>
                <div class="rowBlocks">
                    <div class="rowHeader">
                        Work in Progress
                    </div>
                    <div class = "list" id = "wipList">
                        <% wipList.forEach(function(item){ %>
                            <form action = '/delete' method = 'post'>
                                <div class="item" draggable="true">
                                    <p> <%=item.task%></p>
                                    <p> <%=item.taskDateCreated%></p>
                                    <p hidden=true> <%=item._id%></p>
                                    <input type="checkbox" name="taskToDelete" value="<%= item._id %>" onChange="this.form.submit()">
                                </div>
                            </form>
                        <% }) %>
                    </div>
                </div>
                <div class="rowBlocks">
                    <div class="rowHeader">
                        Completed
                    </div>
                    <div class = "list" id="completedList">
                        <% completedList.forEach(function(item){ %>
                            <form action = '/delete' method = 'post'>
                                <div class="item" draggable="true">
                                    <p> <%=item.task%></p>
                                    <p> <%=item.taskDateCreated%></p>
                                    <p hidden=true> <%=item._id%></p>
                                    <input type="checkbox" name="taskToDelete" value="<%= item._id %>" onChange="this.form.submit()">
                                </div>
                            </form>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    <script src="http://127.0.0.1:3000/dragDrop.js"></script>
    </body>
    </html>